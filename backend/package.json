{
  "name": "graphql-backend",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "start": "node dist/index.js",
    "start:ts": "nodemon src/index.ts",
    "dev": "concurrently npm:watch npm:start:ts npm:gen:watch",
    "gen": "graphql-codegen --config codegen.yml",
    "gen:watch": "graphql-codegen --config codegen.yml --watch",
    "bootstrap": "ts-node data/data-loader.ts"
  },
  "dependencies": {
    "@aaronpowell/static-web-apps-api-auth": "^0.1.3",
    "@graphql-tools/graphql-file-loader": "^7.3.12",
    "@graphql-tools/load": "^7.5.11",
    "@graphql-tools/load-files": "^6.5.3",
    "@graphql-tools/schema": "^8.3.13",
    "@graphql-tools/utils": "^8.6.12",
    "apollo-datasource": "^3.3.1",
    "apollo-datasource-cosmosdb": "^0.1.0",
    "apollo-server-core": "^3.8.0",
    "apollo-server-express": "^3.7.0",
    "backend": "^0.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "dotenv-flow": "^3.2.0",
    "express": "^4.18.1",
    "graphql": "^16.5.0",
    "graphql-subscriptions": "^2.0.0",
    "graphql-ws": "^5.8.2",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.4",
    "ws": "^8.6.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "2.6.2",
    "@graphql-codegen/introspection": "^2.1.1",
    "@graphql-codegen/typescript": "^2.4.11",
    "@graphql-codegen/typescript-resolvers": "^2.6.4",
    "@swc/core": "^1.2.181",
    "@swc/helpers": "^0.3.13",
    "@types/dotenv-flow": "^3.2.0",
    "@types/node": "^17.0.35",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.23.0",
    "concurrently": "^7.2.0",
    "eslint": "^8.15.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "nodemon": "^2.0.16",
    "prettier": "^2.6.2",
    "regenerator-runtime": "^0.13.9"
  }
